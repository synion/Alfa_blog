<div class= "center">
  <strong><h2 class="text-uppercase" >title:<span class="bg-info text-uppercase center"><%= @article.title %></span></h2>
  </strong>
  <div class= "well col-sm-offset-2 col-sm-8" >
    <h3 class= "text-uppercase">description:</h3>
    <span class="bg-info  text-left "><%= simple_format(@article.description) %></span>
  </div>
  <% if @article.user %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class= "article-title">
            <%= link_to @article.user.name, user_path(@article.user) %>
          </li>
          <li><small><%= pluralize(@article.user.articles.count, "article")  if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <div class="col-sm-offset-2 col-sm-8">
    <div class="article-actions">
      <%= link_to "Back to all articles", articles_path, class: "btn btn-default" %>
      <% if logged_in? && current_user == @article.user %>
        <%= link_to "Edit article", edit_article_path(@article), class: "btn  btn-success" %>
        <%= link_to "Delete article", article_path(@article), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>

